! The default urxvt extensions are:
!
!   - option-popup
!   - readline
!   - searchable-scrollback
!   - selection
!   - selection-popup
!
! plus any for which keysyms have been set below. Custom extensions that aren't
! shipped with urxvt should be placed in ~/.urxvt/ext
URxvt.perl-ext-common: default,confirm-paste

! URxvt.background: #d7d7cf
URxvt.background: #ded6cc
URxvt.foreground: #000000

URxvt.saveLines: 10000
URxvt.scrollBar: false
! URxvt.scrollBar_floating: false
! URxvt.scrollBar_right: true
! URxvt.scrollstyle: rxvt
URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true

URxvt.meta8: false

URxvt.font: xft:DejaVu Sans Mono:size=9:antialias=true:hintstyle=hintfull

! Example of a bitmap font that comes with X:
! URxvt.font: 7x13

! Example of a bitmap font installed through fontconfig: (Use pixelsize for a
! bitmap font instead of size; size is measured in points.)
! URxvt.font: xft:GohuFont:pixelsize=14

URxvt.keysym.M-r: searchable-scrollback:start

! black
URxvt.color0:  #444444
URxvt.color8:  #000000

! red
URxvt.color1:  #a00000
URxvt.color9:  #ff0000

! green
URxvt.color2:  #008800
URxvt.color10: #00dd00

! yellow (orange)
URxvt.color3:  #d06b00
URxvt.color11: #ff8800

! blue
URxvt.color4:  #144eb2
URxvt.color12: #54a4f3

! magenta
URxvt.color5:  #9000ff
URxvt.color13: #ff00ff

! cyan
URxvt.color6:  #008080
URxvt.color14: #00cdcd

! white (light gray)
